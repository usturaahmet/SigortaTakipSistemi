@model List<SigortaSirketi>

<h2>Sigorta Şirketleri</h2>

<a asp-action="Create">Yeni Şirket Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
