@model SigortaTakipSistemi.ViewModels.LoginViewModel
@{
    Layout = null; // circular layout'u kesin olarak engeller
    var title = ViewData["Title"] as string ?? "";
}

<!doctype html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] as string ?? "Giriş Yap") • Sigorta Takip</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root { --radius: 16px; }
        html, body { height: 100%; }
        body { background: radial-gradient(1200px 700px at 10% -10%, rgba(59,130,246,.08), transparent),
                         radial-gradient(1200px 700px at 110% 110%, rgba(59,130,246,.08), transparent); }
        .auth-shell { min-height: 100vh; display: grid; place-items: center; padding: clamp(24px, 4vw, 48px); }
        .auth-card { width: 100%; max-width: 460px; border-radius: var(--radius); overflow: hidden; }
        .auth-hero {
            background: linear-gradient(135deg, rgba(59,130,246,.18), rgba(59,130,246,.05));
            padding: 22px 22px 18px 22px;
        }
        .auth-hero .brand { display:flex; align-items:center; gap:10px; font-weight:700; }
        .auth-hero .brand i { font-size: 1.6rem; }
        .auth-hero .sub { color: #6c757d; font-size:.9rem; }
        .auth-body { padding: 22px; }
        .auth-footer { padding: 12px 22px 22px; color: #6c757d; font-size:.9rem; }
        .form-floating > label { opacity: .85; }
        .divider { display:flex; align-items:center; gap:10px; color: #6c757d; font-size:.9rem; }
        .divider::before,.divider::after{ content:""; height:1px; background: var(--bs-border-color); flex:1; }
        .toast-container { z-index: 1080; }
        .btn-password {
            border-top-left-radius: 0; border-bottom-left-radius: 0;
        }
    </style>
</head>
<body>
    <div class="auth-shell container-fluid">
        <div class="card shadow-sm auth-card">
            <div class="auth-hero">
                <div class="brand">
                    <i class="bi bi-shield-check"></i>
                    <span>Sigorta Takip</span>
                </div>
                <div class="sub">Hesabınıza güvenle giriş yapın</div>
            </div>

            <div class="auth-body">
                @* Özet hata alanı (sunucu tarafı validasyon sonrası içerik doldurulur) *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>

                <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="form-floating mb-3">
                        <input asp-for="KullaniciAdiOrEposta" class="form-control" placeholder="kullanıcı adı veya e-posta" autocomplete="username" />
                        <label asp-for="KullaniciAdiOrEposta"></label>
                        <span asp-validation-for="KullaniciAdiOrEposta" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <div class="input-group">
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Sifre" class="form-control" placeholder="••••••" autocomplete="current-password" />
                                <label asp-for="Sifre"></label>
                            </div>
                            <button class="btn btn-outline-secondary btn-password" type="button" id="togglePwd" title="Şifreyi göster/gizle">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Sifre" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input asp-for="BeniHatirla" class="form-check-input" />
                            <label asp-for="BeniHatirla" class="form-check-label"></label>
                        </div>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="small">Şifremi unuttum</a>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                    </button>
                </form>

                <div class="my-3 divider">veya</div>

                <div class="d-grid gap-2">
                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register">
                        <i class="bi bi-person-plus me-1"></i> Kayıt Ol
                    </a>
                </div>
            </div>

            <div class="auth-footer text-center">
                © @DateTime.Now.Year Sigorta Takip • Güvenli erişim
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const btn = document.getElementById('togglePwd');
            if (!btn) return;
            btn.addEventListener('click', function () {
                const input = document.getElementById('Sifre'); // asp-for id
                if (!input) return;
                const isPwd = input.getAttribute('type') === 'password';
                input.setAttribute('type', isPwd ? 'text' : 'password');
                const icon = this.querySelector('i');
                if (icon) {
                    icon.classList.toggle('bi-eye');
                    icon.classList.toggle('bi-eye-slash');
                }
            });
        })();
    </script>
</body>
</html>
