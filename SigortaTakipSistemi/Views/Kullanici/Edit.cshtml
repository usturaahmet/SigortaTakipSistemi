@model Kullanici

<h2>Kullanıcıyı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>İsim Soyisim</label>
        <input asp-for="IsimSoyisim" class="form-control" />
        <span asp-validation-for="IsimSoyisim" class="text-danger"></span>
    </div>

    <div>
        <label>Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" />
        <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
    </div>

    <div>
        <label>Eposta</label>
        <input asp-for="Eposta" class="form-control" />
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>

    <div>
        <label>Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <div>
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Kullanici">Kullanıcı</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">İptal</a>
</form>
