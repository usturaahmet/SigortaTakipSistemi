@model Kullanici

<h2>Yeni Kullanıcı</h2>

<form asp-action="Create" method="post">
    <div><label>İsim Soyisim</label> <input asp-for="IsimSoyisim" class="form-control" /></div>
    <div><label>Kullanıcı Adı</label> <input asp-for="KullaniciAdi" class="form-control" /></div>
    <div><label>Eposta</label> <input asp-for="Eposta" class="form-control" /></div>
    <div><label>Şifre</label> <input asp-for="Sifre" type="password" class="form-control" /></div>
    <div>
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Kullanici">Kullanıcı</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
</form>
