@model List<Kullanici>

<h2>Kullanıcılar</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Kullanıcı</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>E-Posta</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IsimSoyisim</td>
                <td>@item.KullaniciAdi</td>
                <td>@item.Eposta</td>
                <td>@item.Rol</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
