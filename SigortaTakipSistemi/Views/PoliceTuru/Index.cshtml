@model List<PoliceTuru>

<h2>Poliçe Türleri</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Tür Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Prim (%)</th>
            <th>Acenta Primi (%)</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Prim</td>
                <td>@item.AcentaPrimi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
