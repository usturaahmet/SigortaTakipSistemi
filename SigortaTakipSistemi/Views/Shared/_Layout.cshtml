@{
    // Bu sayfa kendi başına layout; üst layout'a girmesin
    Layout = null;

    // Başlık
    var raw = ViewData["Title"] as string;
    var pageTitle = string.IsNullOrWhiteSpace(raw)
        ? "Sigorta Takip Sistemi"
        : $"{raw} • Sigorta Takip Sistemi";

    // Varsayılan tema
    var theme = (ViewData["Theme"] as string) ?? "light";
}
<!DOCTYPE html>
<html lang="tr" data-bs-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@pageTitle</title>

    <script>
        // Tema'yı çok erken uygula (FOUC engelle)
        (function () {
            try {
                var t = localStorage.getItem('theme') || 'light';
                document.documentElement.setAttribute('data-bs-theme', t);
            } catch (e) { /* no-op */ }
        })();
    </script>

    <!-- Bootstrap 5.3 + Icons (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
          rel="stylesheet">

    <!-- Uygulama stilleri -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
    @RenderSection("Styles", required: false)
</head>
<body class="layout">
    <!-- Sidebar -->
    <aside id="sidebar" class="sidebar border-end">
        <div class="brand d-flex align-items-center px-3 py-2">
            <i class="bi bi-shield-check fs-4 me-2"></i>
            <span class="fw-bold">Sigorta Takip</span>
        </div>
        @await Html.PartialAsync("_Sidebar")
    </aside>

    <!-- İçerik -->
    <main class="main">
        @await Html.PartialAsync("_Topbar")

        <div class="container-fluid py-3 page-wrapper">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    @RenderSection("Breadcrumb", required: false)
                    <h1 class="h4 m-0">@raw</h1>
                </div>
                <div class="soft-actions">
                    @RenderSection("PageActions", required: false)
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-3 p-md-4">
                    @RenderBody()
                </div>
            </div>
        </div>

        @await Html.PartialAsync("_Toast")
    </main>

    <!-- Scriptler -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
