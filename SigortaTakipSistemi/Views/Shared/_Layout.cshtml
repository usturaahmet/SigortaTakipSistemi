
@model IEnumerable<SigortaTakipSistemi.Models.PoliceTuru>
@{
    var title = (ViewData["Title"] as string) ?? "Sigorta Takip Sistemi";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Sigorta Takip Sistemi</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-semibold" href="@Url.Action("Index","Home")">Sigorta Takip Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <nav id="topNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Police")">Poliçeler</a>
                    </li>

                    <!-- Yönetim: alt linkler layout'ta görünmeyecek; tek link -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Yonetim")">Yönetim</a>
                    </li>

                    <!-- İstersen sonra raporlar vs. ekleriz -->
                    @* <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Rapor")">Raporlar</a></li> *@
                </ul>

                <div class="d-flex">
                    @* sağ tarafa kullanıcı/oturum butonları eklenebilir *@
                </div>
            </nav>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container small text-muted">
            © @DateTime.Now.Year Sigorta Takip Sistemi
        </div>
    </footer>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
