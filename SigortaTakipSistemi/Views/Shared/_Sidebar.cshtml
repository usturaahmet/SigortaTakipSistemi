@functions {
    string Active(string controller, string? action = null)
    {
        var c = ViewContext.RouteData.Values["Controller"]?.ToString();
        var a = ViewContext.RouteData.Values["Action"]?.ToString();
        bool ok = string.Equals(c, controller, StringComparison.OrdinalIgnoreCase) &&
                  (action == null || string.Equals(a, action, StringComparison.OrdinalIgnoreCase));
        return ok ? "active" : string.Empty;
    }
}
