@{
    var userName = User?.Identity?.IsAuthenticated == true ? User.Identity!.Name : null;
}
<nav class="navbar navbar-expand topbar px-2 px-md-3 border-bottom">
    <div class="container-fluid">
        <div class="d-flex gap-2 align-items-center">
            <button class="btn btn-sm btn-outline-secondary" id="sidebarToggle" type="button" title="Menüyü daralt">
                <i class="bi bi-list"></i>
            </button>
            <div class="d-none d-md-inline-block text-secondary small">
                @DateTime.Now.ToString("dd MMMM yyyy")
            </div>
        </div>

        <div class="ms-auto d-flex align-items-center gap-2">
            <div class="input-group d-none d-lg-flex search" role="search">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input class="form-control" type="search" placeholder="Ara..." />
            </div>

            <button class="btn btn-sm btn-outline-secondary" id="themeToggle" type="button" title="Tema değiştir">
                <i class="bi bi-moon-stars"></i>
            </button>

            <div class="dropdown">
                <button class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i> @(userName ?? "Misafir")
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">Hesap</h6></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                            <i class="bi bi-gear me-2"></i>Profil
                        </a>
                    </li>
                    <li><hr class="dropdown-divider" /></li>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-1">
                                <button class="btn btn-sm btn-outline-danger w-100" type="submit">
                                    <i class="bi bi-box-arrow-right me-2"></i>Çıkış
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>
