@model IEnumerable<SigortaTakipSistemi.Models.Police>
@{
    ViewData["Title"] = "Poliçe Türleri";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Poliçe Türleri</h2>
    <a asp-action="Create" class="btn btn-success">Yeni Tür Ekle</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Prim (%)</th>
            <th>Acenta Primi (%)</th>
            <th class="text-end">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@String.Format("{0:0.##}", item.Prim)</td>
                <td>@String.Format("{0:0.##}", item.AcentaPrimi)</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    <span class="mx-2">|</span>
                    <!-- Şirket + Tür oranlarını yönetmek için kısayol -->
                    <a asp-controller="PoliceTuruSirket" asp-action="Index" asp-route-turId="@item.Id" class="btn btn-sm btn-outline-primary ms-1">
                        Şirket Oranları
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
