@model IEnumerable<SigortaTakipSistemi.Models.Police>
@{
    ViewData["Title"] = "Poliçeler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Poliçeler</h3>
    <a class="btn btn-primary" asp-action="Create">Yeni Poliçe</a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Poliçe No</th>
            <th>Kişi</th>
            <th>TC No</th>
            <th>Telefon</th>
            <th>Şirket</th>
            <th>Tür</th>
            <th>Personel</th>
            <th>Tanzim</th>
            <th>Başlangıç</th>
            <th>Süre (Ay)</th>
            <th>Bitiş</th>
            <th>Fiyat</th>
            <th style="width:140px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.PoliceNo</td>
                <td>@item.Kisi</td>
                <td>@item.TcNo</td>
                <td>@item.TelefonNo</td>
                <td>@item.SigortaSirketi?.Ad</td>
                <td>@item.PoliceTuru?.Ad</td>
                <td>@item.Personel?.IsimSoyisim</td>
                <td>@item.TanzimTarihi.ToString("dd.MM.yyyy")</td>
                <td>@item.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                <td>@item.PoliceSuresi</td>
                <td>@item.BitisTarihi.ToString("dd.MM.yyyy")</td>
                <td>@item.Fiyat.ToString("N2")</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model?.Any() ?? true)
{
    <div class="alert alert-info mt-3">
        Henüz poliçe bulunmuyor. <a asp-action="Create">Yeni poliçe ekle</a>.
    </div>
}
